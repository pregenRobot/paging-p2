{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C build",
            "type": "cppbuild",
            "command": "gcc",
            "args":[
                "-std=gnu99",
                "-g",
                "-o",
                "test",
                "paging.c",
                "test.c",
            ],
            "options": {
                "cwd": "${workspaceFolder}/src/"
            },
            "problemMatcher": ["$gcc"],
            "group":{
                "kind": "build",
                "isDefault": false
            },
            "detail": "compiler: gcc"
        },
        {
            "label": "C build Inverted",
            "type": "cppbuild",
            "command": "gcc",
            "args":[
                "-std=gnu99",
                "-g",
                "-o",
                "test_inverted",
                "inverted_paging.c",
                "inverted_test.c",
            ],
            "options": {
                "cwd": "${workspaceFolder}/src/"
            },
            "problemMatcher": ["$gcc"],
            "group":{
                "kind": "build",
                "isDefault": false
            },
            "detail": "compiler: gcc"
        }
    ]
}